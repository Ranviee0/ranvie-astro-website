---
import MainLayout from "../../layouts/MainLayout.astro"
import { getCollection } from 'astro:content';
const posts = (await getCollection('blog'));
---

<MainLayout>
    <section class="content">
        <div class="container">
            {
                posts.map((post: { slug: any; data: { title: unknown; desc: unknown; }; }) => (
                    <div class="element">
                        <a href={`/blog/${post.slug}/`}>
                        <h3>{post.data.title}</h3>
                        </a>
                        <p>{post.data.desc}</p>
                    </div>
                ))
            }
        </div>
    </section>
</MainLayout>

<style>
    .content{
    display: flex;
    justify-content: center;
    align-items: top;
    padding: 10px;
    }
    .container {
    max-width: 768px;
    }
    .element {
    margin-top: 30px;
    }
    p
    {
    margin: 10px;
    padding: 0;
    }
    h4
    {
    margin: 10px;
    padding: 0;
    }
    h3
    {
    margin: 10px;
    padding: 0;
    }
    a
    {
    color: white;
    text-decoration: none;
    }
    a :hover
    {
    color: fuchsia;
    text-decoration: underline;
    }
</style>
