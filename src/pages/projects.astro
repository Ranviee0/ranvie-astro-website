---
import MainLayout from "../layouts/MainLayout.astro"
import data from "../json/projects"
---

<MainLayout>
    <div class="body">
        <div>
            {
            data.map((item) => (
                <div class="container">
                    <div class="image">
                        <img src={item.image}/>
                    </div>
                <div class="text-container">
                    <div>
                        <h4>
                            {item.name} 
                        </h4>
                        <p>
                            {item.desc}
                        </p>
                        <div class="links">
                            {item.links.map((item) => (
                            <a href={item.url} class="link-item">
                            {item.site}
                            </a>
                        ))}
                        </div>
                    </div>
                </div>
                </div>
            ))
            }
        </div>
    </div>
</MainLayout>

<style>
    .image{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    img {
        width: 200px;
        box-shadow: 1px 1px 6px black;
    }
    .links{
        margin-top: 8px;
    }
    .link-item{
        color:fuchsia;
        margin-right: 10px;
    }
    .body{
		display: flex;
        justify-content: center;
        align-items: top;
        margin-top: 20px;
	}
    .container{
        max-width: 720px;
        display: flex;
        flex-direction: row;
        margin: 20px;
    }
    .text-container{
        margin: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    h4{
        padding: 0px;
        margin: 0px;
    }
    p{
        padding: 0px;
        margin: 0px;
    }
    @media (max-width: 600px){
    .container{
        flex-direction: column;
        margin: 0px;
        padding: 15px;
    }
    .text-container{
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 10px;
        padding-bottom: 10px;
        margin: 0px;
        justify-content: left;
    }
    .links{
        margin-top: 0px;
    }
    }
</style>